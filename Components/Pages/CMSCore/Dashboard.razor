@code{
    #region Properties
    public EmptyProject.Areas.CMSCore.Entities.User? User { get; set; }

    public bool Toggle { get; set; } = false;

    public List<Menu?> lstMenuResult { get; set; }
    #endregion

    protected override void OnInitialized()
    {
        //Look for saved user in shared component, simulates a session
        User = StateContainer.User == null ? new() : StateContainer.User;

        if (User.UserId != 0)
        {
            //Logged user
            Toggle = true;

            List<RoleMenu?> lstRoleMenu = rolemenuRepository
                                    .GetAll(CancellationToken.None);

            List<Menu?> lstMenu = menuRepository
                                    .GetAll(CancellationToken.None);

            lstMenuResult = rolemenuRepository
                                .GetAllURLPathByRoleId(User.RoleId,
                                lstRoleMenu,
                                lstMenu);

        }
        else
        {
            //Not logged user
            Toggle = false;

            //Redirect to...
            NavigationManager.NavigateTo("Login");
        }
    }
}